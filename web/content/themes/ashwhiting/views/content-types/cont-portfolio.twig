{# Portfolio Logic #}

{% set con = content_block %}
{% set portfolio = con.portfolio %}
{% set placeholder_image = theme.link ~ "/build/images/placeholder.png" %}

<section class="container-fluid portfolio">
	<div class="row">
		{% for folio_item in portfolio %}
			{% if folio.link_select == "internal" %}
				{% set link = folio.internal_link %}
				{% set target = "_self" %}
			{% else %}
				{% set link = folio.external_link %}
				{% set target = "_blank" %}
			{% endif %}

			<a href="link" target="{{ target }}" title="{{ caption }}">

				<article class="portfolio-item reveal">

					{% set folio = folio_item.portfolio_items %}
					{% if folio.image %}
						{% set img = folio.image %}
					{% else %}
						{% set img = placeholder_image %}
					{% endif %}

					<figure class="image">
						<img src="{{ img }}" class="img-respond">
					</figure>

					<div class="overlay">
						<div class="overlay-inner">

						</div>
					</div>

					<div class="captions match">
						<div class="captions-inner">
							<div class="title match">
								<h3 class="widont">{{ folio.title }}</h3>
							</div>
							<div class="info">
								{{folio.company}} - {{folio.client}}
							</div>
							<div class="caption match">
								{{ folio.caption }}
							</div>
						</div>
					</div>

					{{ folio.internal_link }}
					{{ folio.external_link }}

				</article>
			</a>
		{% endfor %}
</section>
