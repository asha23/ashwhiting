<!DOCTYPE html>

<!--[if lt IE 7]><html {{site.language_attributes}} class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if (IE 7)&!(IEMobile)]><html {{site.language_attributes}} class="no-js lt-ie9 lt-ie8"><![endif]-->
<!--[if (IE 8)&!(IEMobile)]><html {{site.language_attributes}} class="no-js lt-ie9"><![endif]-->
<!--[if gt IE 8]><!--> <html {{site.language_attributes}} class="no-js"><!--<![endif]-->

<head>
	<meta charset="utf-8">

	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

	<style>

      /* Initial states to stop fouc */

      .reveal,
	  .reveal-noslide { visibility: hidden; }

	  .reveal-folio {
		  -webkit-transform: translateY(20px) scale(0.9);
		  transform: translateY(20px) scale(0.9);
	  }

	  .portfolio {
		  opacity:0;
	  }

    </style>

	<title>
	{% if wp_title %}
		{{ wp_title }}
	{% else %}
		{{ site.name }}
	{% endif %}
	</title>

	<script type="text/javascript">
        var domain = '{{ domain }}';
        var ajaxurl = '{{ ajax_url }}';
        var templateurl = '{{ theme.link }}';
    </script>

	{# mobile meta #}

	<meta name="HandheldFriendly" content="True">
	<meta name="MobileOptimized" content="320">
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

	<!--[if IE]>
        <link rel="shortcut icon" href="{{ theme.link }}/favicon.ico">
    <![endif]-->

	<meta name="msapplication-TileColor" content="#f01d4f">
    <meta name="msapplication-TileImage" content="{{ theme.link }}/library/images/win8-tile-icon.png">

    <link rel="pingback" href="{{ function('bloginfo','pingback_url') }}">

	{{ function('wp_head') }}

	<!--[if lt IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js"></script><![endif]-->
</head>
